<%= form_with model: @article, url:dashboard_blog_path(@article), method: :patch, local: true, html: { class: 'space-y-4' } do |form| %>
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-4">Edit Article</h1>

    <% if @article.errors.any? %>
      <div class="mb-4">
        <div class="bg-red-100 text-red-700 p-4 rounded">
          <h3 class="font-semibold">There were some errors with your submission:</h3>
          <ul class="list-disc pl-5 mt-2">
            <% @article.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :title, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :title, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
    </div>

    <div class="mb-4">
      <%= form.label :body, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_area :body, rows: 5, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
    </div>

    <div class="mb-4">
      <%= form.label :category_id, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.collection_select :category_id, Category.all, :id, :name, { include_blank: 'Select a Category' }, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
    </div>

    <div class="mb-4">
      <%= form.label :header_image, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.file_field :header_image, class: 'mt-1 block w-full' %>
      <% if @article.header_image.attached? %>
        <div class="mt-4">
          <%= image_tag @article.header_image, class: 'w-full h-auto' %>
        </div>
      <% end %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit 'Update Article', class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Cancel', dashboard_blogs_path, class: 'text-gray-600 hover:text-gray-800' %>
    </div>
  </div>
<% end %>
