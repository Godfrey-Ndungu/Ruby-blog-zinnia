<%= form_with model: @article, url: dashboard_blogs_path, local: true, html: { class: 'space-y-4' } do |form| %>
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-4">New Blog</h1>

    <% if @article.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">There were some errors with your submission:</strong>
        <ul class="mt-2">
          <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="mb-4">
      <%= form.label :category_id, 'Category', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.collection_select :category_id, Category.all, :id, :name, { include_blank: 'Select a category' }, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
      <% if @article.errors[:category_id].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @article.errors[:category_id].first %></p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= form.label :title, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :title, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
      <% if @article.errors[:title].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @article.errors[:title].first %></p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= form.label :body, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_area :body, rows: 5, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
      <% if @article.errors[:body].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @article.errors[:body].first %></p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= form.label :header_image, class: 'block text-sm font-medium text-gray-700' %>
      <%= form.file_field :header_image, class: 'mt-1 block w-full' %>
      <% if @article.errors[:header_image].any? %>
        <p class="text-red-600 text-sm mt-1"><%= @article.errors[:header_image].first %></p>
      <% end %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit 'Create Blog', class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Cancel', dashboard_blogs_path, class: 'text-gray-600 hover:text-gray-800' %>
    </div>
  </div>
<% end %>
