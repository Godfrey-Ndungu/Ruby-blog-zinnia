<h1 class="text-2xl font-bold mb-6">New Author</h1>

<%= form_with model: @author, url: dashboard_authors_path, local: true, html: { class: 'space-y-6' } do |form| %>
  <% if flash[:alert] %>
    <div class="bg-red-100 text-red-700 p-4 rounded-md mb-4">
      <h2 class="font-semibold"><%= flash[:alert] %></h2>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :user_id, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.collection_select :user_id, User.left_outer_joins(:author).where(authors: { id: nil }), :id, :email, { prompt: "Select a User" }, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
  </div>

  <div class="mb-4">
    <%= form.label :full_name, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :full_name, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
  </div>

  <div class="flex items-center justify-end">
    <%= form.submit 'Create Author', class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md' %>
  </div>
<% end %>
