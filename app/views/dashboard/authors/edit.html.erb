<h1 class="text-2xl font-bold mb-6">Edit Author</h1>

<%= form_with model: @author, url: dashboard_author_path(@author), method: :patch, local: true, html: { class: 'space-y-4' } do |form| %>
  <% if @author.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h2 class="font-semibold text-lg"><%= pluralize(@author.errors.count, "error") %> prohibited this author from being saved:</h2>
      <ul class="list-disc pl-5 mt-2">
        <% @author.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :full_name, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :full_name, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit 'Update Author', class: 'bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded' %>
    <%= link_to 'Cancel', dashboard_authors_path, class: 'text-gray-600 hover:text-gray-800' %>
  </div>
<% end %>
