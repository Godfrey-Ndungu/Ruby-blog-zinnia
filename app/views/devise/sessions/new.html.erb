<div class="min-h-screen flex items-center  w-full justify-center bg-secondary-bg p-4">
  <div class="bg-white bg-opacity-90 p-8 rounded-lg shadow-lg w-full max-w-md md:max-w-lg lg:max-w-xl xl:max-w-2xl z-10">
    <h2 class="text-main-text-color text-4xl mb-4 text-center font-extrabold">Log in</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-secondary-text-color font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded" %>
      </div>
      
      <div class="mb-4">
        <%= f.label :password, class: "block text-secondary-text-color font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 border border-gray-300 rounded" %>
      </div>
      
      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-xs font-bold text-secondary-text-color" %>
        </div>
      <% end %>
      
      <div class="mb-4">
        <%= f.submit "Log in", class: "w-full bg-main-bg text-white p-2 rounded font-bold hover:bg-opacity-90" %>
      </div>
    <% end %>
    
    <div class="text-center text-xs font-bold text-secondary-text-color">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
