<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'tailwind', 'inter-font', 'data-turbo-track': 'reload' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body class="bg-gray-100 text-gray-900">
  <div class="flex flex-col h-screen">
    <!-- Top Navigation Bar -->
    <header class="bg-red-700 text-white flex items-center justify-between p-4">
      <div class="flex items-center">
        <%= link_to destroy_user_session_path, method: :delete, class: 'text-white px-3 py-2 rounded-md hover:bg-red-800' do %>
          Sign Out
        <% end %>
      </div>
      <div class="flex items-center space-x-4">
        <%# <%= image_tag(current_user.author.profile_picture.url, alt: "Profile Picture", class: "w-12 h-12 rounded-full object-cover") if current_user.author.profile_picture.attached? %> %>
        <h2 class="text-xl font-semibold"><%= current_user.author.full_name %></h2>
      </div>
    </header>

    <div class="flex flex-1">
      <!-- Left Navigation Bar -->
      <aside class="w-1/4 bg-purple-700 text-white flex flex-col">
        <nav class="flex-1">
          <ul class="mt-6 space-y-4">
            <li>
              <%= link_to 'Authors', dashboard_authors_path, class: 'block py-2 px-4 hover:bg-purple-800 rounded-md text-white bg-purple-600' %>
            </li>
            <li>
              <%= link_to 'Categories', categories_path, class: 'block py-2 px-4 hover:bg-purple-800 rounded-md' %>
            </li>
            <li>
              <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'block py-2 px-4 hover:bg-purple-800 rounded-md' %>
            </li>
            <li>
                <%= link_to 'Add New Blog', new_dashboard_blog_path, class: 'bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-md' %>
            </li>
            <li class="mb-4">
              <%= link_to 'Dashboard', dashboard_blogs_path, class: 'block py-2 px-4 hover:bg-gray-700' %>
            </li>

          </ul>
        </nav>
      </aside>

      <!-- Main Content Area -->
      <main class="w-3/4 p-6 overflow-y-auto">
        <%= yield %>
      </main>
    </div>
  </div>
</body>
</html>
