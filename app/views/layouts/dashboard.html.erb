<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'tailwind', 'inter-font', 'data-turbo-track': 'reload' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>

<body class="bg-gray-100 text-gray-900">
  <div class="flex h-screen">
    <!-- Left Navigation Bar -->
    <aside class="w-1/6 bg-purple-700 text-white flex flex-col">
      <nav class="flex-1 pt-32">
        <ul class="mt-6 space-y-4">
          <li>
            <%= link_to dashboard_path, class: 'block py-4 px-8 rounded-md hover:bg-purple-800 flex items-center space-x-2 bg-purple-600' do %>
              <i class="fas fa-tachometer-alt"></i>
              <span>Dashboard</span>
            <% end %>
          </li>
          <li>
            <%= link_to dashboard_blogs_path, class: 'block py-4 px-8 rounded-md hover:bg-purple-800 flex items-center space-x-2 bg-purple-600' do %>
              <i class="fas fa-file-alt"></i>
              <span>Articles</span>
            <% end %>
          </li>
          <li>
            <%= link_to dashboard_authors_path, class: 'block py-4 px-8 rounded-md hover:bg-purple-800 flex items-center space-x-2 bg-purple-600' do %>
              <i class="fas fa-users"></i>
              <span>Authors</span>
            <% end %>
          </li>
          <li>
            <%= link_to dashboard_categories_path, class: 'block py-4 px-8 rounded-md hover:bg-purple-800 flex items-center space-x-2 bg-purple-600' do %>
              <i class="fas fa-tags"></i>
              <span>Categories</span>
            <% end %>
          </li>
          <li class="block py-4 px-8 text-gray-300 cursor-not-allowed flex items-center space-x-2">
            <i class="fas fa-user"></i>
            <span>Profile</span>
          </li>
        </ul>
      </nav>
      <div class="bg-purple-800 p-4">
        <%= link_to destroy_user_session_path, method: :delete, class: 'block py-4 px-8 rounded-md bg-red-500 hover:bg-red-600 text-white' do %>
          Sign Out
        <% end %>
      </div>
    </aside>

    <div class="flex flex-col flex-1">
      <!-- Top Navigation Bar -->
      <header class="bg-red-700 text-white flex items-end justify-end p-4">
        <div class="flex items-end space-x-4">
          <% if current_user.author.profile_picture.attached? %>
            <%= image_tag(current_user.author.profile_picture.url, alt: "Profile Picture", class: "w-12 h-12 rounded-full object-cover") %>
          <% else %>
            <div class="w-12 h-12 bg-gray-300 rounded-full flex items-center justify-center text-white font-bold text-lg">
              <%= current_user.author.full_name[0] %>
            </div>
          <% end %>
          <div class="text-right bg-red-800 p-2 rounded-md">
            <h2 class="text-xl font-semibold"><%= current_user.author.full_name %></h2>
            <p class="text-xs"><%= current_user.email %></p>
          </div>
        </div>
      </header>

      <!-- Main Content Area -->
      <main class="flex-1 p-6 overflow-y-auto">
        <%= yield %>
      </main>
    </div>
  </div>
</body>
</html>
