<h1>Edit Comment</h1>

<%= form_with(model: @comment, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control", rows: 3 %>
  </div>
  <%= form.submit "Update Comment", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back', @comment.article %>
