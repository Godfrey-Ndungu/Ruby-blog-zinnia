<h1>Authors</h1>
<%= link_to 'Add Author', new_author_path, class: 'btn btn-primary' %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.id %></td>
        <td><%= author.full_name %></td>
        <td><%= author.user.email %></td>
        <td><%= author.is_active %></td>
        <td>
          <%= link_to 'Edit', edit_author_path(author), class: 'btn btn-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
