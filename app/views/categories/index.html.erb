<h1>Categories</h1>
<%= link_to 'New Category', new_category_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.slug %></td>
        <td>
          <%= link_to 'Edit', edit_category_path(category) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
